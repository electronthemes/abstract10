<!-- footer
================================================== -->
<footer>
    <div class="footer-main">
        <div class="row">
            {{> "widgets/about"}}
            {{> "widgets/footer-links"}}
            {{> "widgets/social-links"}}
            {{> "widgets/subscribe-form"}}
        </div> <!-- end row -->
    </div> <!-- end footer-main -->
    <div class="footer-bottom">
        <div class="row">
            <div class="col-twelve">
                <div class="copyright">
                    <p class="col-lg-12 footer-text text-center">
                        {{#if @custom.site_footer}}
                        &copy; {{date format="YYYY"}}&nbsp;{{@site.title}} - {{@custom.site_footer}}
                        {{else}}
                        &copy; {{date format="YYYY"}}&nbsp;{{{t ". Published with {website}" website="<a target=\"_blank\" href=\"https://electronthemes.com/\">Electronthemes</a>"}}}
                        {{/if}}
                    </p>
                </div>

                <div id="go-top">
                    <a class="smoothscroll" title="Back to Top" href="#top"><i class="icon icon-arrow-up"></i></a>
                </div>
            </div>
        </div>
    </div> <!-- end footer-bottom -->
</footer>

<div id="preloader">
    <div id="loader"></div>
</div>