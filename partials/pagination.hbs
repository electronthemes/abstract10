<nav class="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">&larr;{{t "Prev"}}</a>
    {{/if}}
    <span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages }}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">{{t "Next"}} &rarr;</a>
    {{/if}}
</nav>